<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
     <TextView
             android:id="@+id/textViewEmail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="feedback@techroversolutions.com"
             android:layout_gravity="right|top"/>   
    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:orientation="vertical" >
       

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Learning Experience " />      
      </LinearLayout>
       <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:layout_marginStart="50dp"               
            android:numStars="5"
            android:stepSize="0.1" />
         <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
          android:orientation="horizontal">       
       		 <RatingBar
       		 android:id="@+id/ratingexp"
        	 android:layout_width="wrap_content"
        	 android:layout_height="wrap_content" 
        	 android:layout_marginStart="50dp"
             style="?android:attr/ratingBarStyleSmall"
             android:numStars="5"
             android:stepSize="0.1"/>
        	 <TextView
             android:id="@+id/textViewexp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"/>        
       </LinearLayout>

       

   

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
        <TextView
         android:id="@+id/textView2"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:text="Office Infrastructure" />       
     </LinearLayout>
     
	   <RatingBar
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"           
            android:numStars="5"
            android:stepSize="0.1" />
	    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
          android:orientation="horizontal">       
       		 <RatingBar
       		 android:id="@+id/ratingoff"
        	 android:layout_width="wrap_content"
        	 android:layout_height="wrap_content" 
        	 android:layout_marginStart="50dp"
             style="?android:attr/ratingBarStyleSmall"
             android:numStars="5"
             android:stepSize="0.1"/>
        	 <TextView
             android:id="@+id/textViewoff"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"/>        
       </LinearLayout> 
               
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Trainer Knowledge" />        
          
    </LinearLayout>
     <RatingBar
            android:id="@+id/ratingBar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:layout_marginStart="50dp"
            android:numStars="5" />  
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
          android:orientation="horizontal">       
       		 <RatingBar
       		 android:id="@+id/ratingknw"
        	 android:layout_width="wrap_content"
        	 android:layout_height="wrap_content" 
        	 android:layout_marginStart="50dp"
             style="?android:attr/ratingBarStyleSmall"
             android:numStars="5"
             android:stepSize="0.1"/>
        	 <TextView
             android:id="@+id/textViewknw"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"/>        
       </LinearLayout>
       
      
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Interested in next class ?" />        
         <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
        	<RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Yes" />
            <RadioButton
             android:id="@+id/radio1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textSize="12sp"
             android:text="No" />
          </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Will refer My Friends" />        
         <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
        	<RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Yes" />
            <RadioButton
             android:id="@+id/radio4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textSize="12sp"
             android:text="No" />
          </RadioGroup>
    </LinearLayout>
    
    
    <EditText
  	 	 android:id="@+id/EditTextFeedbackBody"
   	 	android:layout_height="wrap_content"
   	 	android:layout_width="200dp"
    	android:background="@drawable/edittext_bg"
    	android:layout_marginTop="20dp"
   	 	android:inputType="textMultiLine"
    	android:hint="@string/feedback_detail"
    	android:layout_marginStart="100dp"    
    	android:lines="7">
   </EditText>
   
     
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Submit" />

     <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/tech" />

      </LinearLayout>
    </ScrollView>

</LinearLayout>